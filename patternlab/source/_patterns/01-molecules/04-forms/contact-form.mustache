<form method="post" action="{{ url }}" class="contact-form">
  <fieldset>
    <div class="field-container">
      <label for="contact-name">Name</label>
      <input id="contact-name" type="text" placeholder="Enter Your Name" />
    </div>
    <div class="field-container">
      <label for="contact-email">Email</label>
      <input id="contact-email" type="email" placeholder="Your email address" />
    </div>
    <div class="field-container">
      <label for="contact-field">Message</label>
      <textarea id="contact-field" rows="5" placeholder="Write you message here"></textarea>
    </div>
    <button class="btn contact-submit">Send Message</button>
  </fieldset>
</form>